


<MudChip Color="@GetColor()" Variant="Variant.Filled">@Statut</MudChip>

@code {
    [Parameter] public string Statut { get; set; } = "En attente";

    private Color GetColor() => Statut switch
    {
        "Validé" => Color.Success,
        "Rejeté" => Color.Error,
        _ => Color.Warning
    };
}
