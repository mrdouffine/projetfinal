@page "/"
@* Index.razor - Page d'accueil du système de gestion de congés *@

<PageTitle>Accueil - GCO</PageTitle>

<div class="dashboard-header">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="page-title">
                <i class="fas fa-calendar-alt me-3"></i>
                Tableau de bord
            </h1>
            <p class="page-subtitle">Gestion de Congés - Bienvenue, <strong>Marie Dubois</strong></p>
        </div>
        <div class="col-md-6 text-md-end">
            <div class="quick-actions">
                <a href="/demande-form" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Nouvelle demande
                </a>
                <a href="/notifications" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-bell me-2"></i>
                    Notifications
                    <span class="badge bg-danger ms-1">3</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Cartes de statistiques -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card stats-primary">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="card-title text-uppercase">Solde disponible</h6>
                        <h3 class="mb-0">23 jours</h3>
                        <small class="text-muted">Sur 25 jours annuels</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card stats-success">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="card-title text-uppercase">Demandes approuvées</h6>
                        <h3 class="mb-0">8</h3>
                        <small class="text-muted">Cette année</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card stats-warning">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="card-title text-uppercase">En attente</h6>
                        <h3 class="mb-0">2</h3>
                        <small class="text-muted">Demandes en cours</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card stats-info">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="card-title text-uppercase">Équipe</h6>
                        <h3 class="mb-0">12 personnes</h3>
                        <small class="text-muted">3 absents aujourd'hui</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Mes dernières demandes -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>
                    Mes dernières demandes
                </h5>
                <a href="/demandes" class="btn btn-sm btn-outline-primary">Voir tout</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Période</th>
                                <th>Type</th>
                                <th>Durée</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div>
                                        <strong>15/03 - 19/03/2024</strong>
                                        <br><small class="text-muted">Du lundi au vendredi</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">Congés payés</span>
                                </td>
                                <td>5 jours</td>
                                <td>
                                    <span class="badge bg-warning">En attente</span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div>
                                        <strong>28/02 - 01/03/2024</strong>
                                        <br><small class="text-muted">Mercredi au vendredi</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">Congé maladie</span>
                                </td>
                                <td>2 jours</td>
                                <td>
                                    <span class="badge bg-success">Approuvé</span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div>
                                        <strong>14/02/2024</strong>
                                        <br><small class="text-muted">Mercredi</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">RTT</span>
                                </td>
                                <td>1 jour</td>
                                <td>
                                    <span class="badge bg-success">Approuvé</span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendrier et notifications -->
    <div class="col-lg-4 mb-4">
        <!-- Prochains congés de l'équipe -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-calendar me-2"></i>
                    Prochains congés équipe
                </h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Jean Martin</h6>
                            <small class="text-muted">20-24 Mars</small>
                            <p class="mb-0 small">Congés payés - 5 jours</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-marker bg-info"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Sophie Laurent</h6>
                            <small class="text-muted">25 Mars</small>
                            <p class="mb-0 small">RTT - 1 jour</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-marker bg-warning"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Pierre Durand</h6>
                            <small class="text-muted">2-5 Avril</small>
                            <p class="mb-0 small">Congés payés - 4 jours</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications récentes -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-bell me-2"></i>
                    Notifications récentes
                </h6>
            </div>
            <div class="card-body">
                <div class="notification-item">
                    <div class="notification-icon bg-success">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="notification-content">
                        <p class="mb-1"><strong>Demande approuvée</strong></p>
                        <small class="text-muted">Congés du 28/02 au 01/03 approuvés</small>
                        <br><small class="text-muted">Il y a 2 heures</small>
                    </div>
                </div>

                <div class="notification-item">
                    <div class="notification-icon bg-primary">
                        <i class="fas fa-info"></i>
                    </div>
                    <div class="notification-content">
                        <p class="mb-1"><strong>Rappel</strong></p>
                        <small class="text-muted">N'oubliez pas de valider les demandes en attente</small>
                        <br><small class="text-muted">Il y a 1 jour</small>
                    </div>
                </div>

                <div class="notification-item">
                    <div class="notification-icon bg-info">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="notification-content">
                        <p class="mb-1"><strong>Nouvelle demande</strong></p>
                        <small class="text-muted">Jean Martin a soumis une demande</small>
                        <br><small class="text-muted">Il y a 2 jours</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>